{% extends 'partials/variables.html.twig' %}

{% set module = page.header.hero %}
{% block render_block %}
	{% set image = page.media[page.header.hero.image] %}

	{% set bg = page.media[page.header.hero.hero_bg].url ?? '' %}
	<div class="hero {{ module.size == 'medium' ? 'medium' : '' }}" style="{% if(bg) %}background-image: url('{{ bg }}'){% endif %}">
		<div class="container hero-container {{ module.classes }}">
			<div class="hero-text {{ module.classes == 'text_image_center' ? 'hero_text_center' : 'hero_text_left' }}">
				<h1 class="hero-title">
					{{ module.h1.translatable|striptags('<span>')|raw }}
				</h1>
				{# <div class="hero-image hidden-on-lg"><img class="zoom-in-image" src="{{ image.url }}" alt="icon"/></div> #}
				<p class="">{{ module.text.translatable }}</p>

				{% for button in module.buttons  %}
					<a class="button " href="{{ button.link }}">
{#                        {{ button.text.translatable }}#}

						<span>{{ button.text.translatable }}</span>

						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="25" viewBox="0 0 24 25" fill="none">
						<path d="M12 16.7239L16 12.7239M16 12.7239L12 8.72388M16 12.7239H8M22 12.7239C22 18.2467 17.5228 22.7239 12 22.7239C6.47715 22.7239 2 18.2467 2 12.7239C2 7.20103 6.47715 2.72388 12 2.72388C17.5228 2.72388 22 7.20103 22 12.7239Z" stroke="url(#paint0_linear_12305_3123)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						<defs>
						<linearGradient id="paint0_linear_12305_3123" x1="12" y1="22.7239" x2="12" y2="2.72388" gradientUnits="userSpaceOnUse">
						<stop stop-color="#fff"/>
						<stop offset="1" stop-color="#fff"/>
						</linearGradient>
						</defs>
						</svg>
                        
{#						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">#}
{#						<path d="M12 16L16 12M16 12L12 8M16 12H8M22 12C22 17.5228 17.5228 22 12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12Z" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>#}
{#						</svg>#}
					</a>
				{% endfor %}
			</div>

			{% if image != '' %}
				<div class="hero-image flex-on-lg"><img class="" src="{{ image.url }}" alt="icon"/></div>
			{% endif %}

		</div>
	</div>
{% endblock %}
